-- build a tower n floors high

os.loadAPI("location")
os.loadAPI("pack")
maxFloors = 1

function init()
    print("How many floors total? ")
    maxFloors = tonumber(io.read())
    pack.define("wall",{1,2,3,4,5,6,7,8})
    pack.define("floor",{9,10,11,12,13,14,15,16})
end

function digBasement()
    print("Digging the basement")
    shell.run("excavate 12 5")
    location.d(4) -- move down to start floor
    print("Dug the basement!")
end

function placeFloor()
    print("Placing the floor")
    location.u(1); -- up 1 from start location
    local evenRow = false
    for x=1,12 do
        pack.select("floor");
        turtle.placeDown();
        for y=1,11 do
            location.f(1);
            pack.select("floor");
            turtle.placeDown();
        end
        if evenRow then
            location.r()
            location.f(1)
            location.r()
        else
            location.l()
            location.f(1)
            location.l()
        end
        evenRow = not evenRow;
    end
    -- return to start
    print("Floor placed")
end

function placeFullWall()
    print("Placing full wall")
    location.u(1); -- up 1 from start location
    for x=1,4 do
        for y=1,11 do
            location.f(1);
            pack.select("wall");
            turtle.placeDown();
        end
        location.r();
    end
    print("Full wall placed");
end

function placeWindowWall()
    print("Placing window wall")
    pack.select("wall");
    location.u(1); -- up 1 from start location
    for x=1,4 do
        location.f(1);
        pack.select("wall");
        turtle.placeDown();
        location.f(3);
        pack.select("wall");
        turtle.placeDown();
        location.f(3);
        pack.select("wall");
        turtle.placeDown();
        location.f(3);
        pack.select("wall");
        turtle.placeDown();
        location.f(1);
        pack.select("wall");
        turtle.placeDown();
        location.r();
    end
    print("Window wall placed");
end

function buildTower()
    -- dig basement (4 deep)
    digBasement()

    -- place floor (12x12)
    placeFloor()

    -- build basement walls (3 high, no windows)
    placeFullWall()
    placeFullWall()
    placeFullWall()

    -- place floor
    placeFloor()
    -- TODO reload

    -- build main walls (door and windows)
    placeFullWall()
    placeWindowWall()
    placeWindowWall()
    placeFullWall()

    -- build floor
    placeFloor()
    -- TODO reload

    for x=1,numFloors do
        -- build n walls (windows)
        placeFullWall()
        placeWindowWall()
        placeWindowWall()
        
        -- build n ceiling
        placeFloor()
        
        -- TODO reload
    end
end

init()
buildTower()